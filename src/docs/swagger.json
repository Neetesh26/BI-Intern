{
  "openapi": "3.0.0",
  "info": {
    "title": "E-Commerce API",
    "version": "1.0.0",
    "description": "API documentation for E-Commerce Backend"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "Health check API"
    },
    {
      "name": "Auth",
      "description": "User authentication APIs"
    },
    {
      "name": "Admin",
      "description": "Admin product management APIs"
    }
  ],
  "paths": {

    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Check API health status",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2026-02-12T10:00:00Z"
                    },
                    "uptime": {
                      "type": "number",
                      "example": 10234
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register user and send OTP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "8989071137"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "OTP sent successfully" },
          "400": { "description": "Bad request" }
        }
      }
    },

    "/auth/verify/{phone}": {
      "post": {
        "tags": ["Auth"],
        "summary": "Verify OTP",
        "parameters": [
          {
            "in": "path",
            "name": "phone",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "otp": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OTP verified successfully" },
          "400": { "description": "Invalid OTP" }
        }
      }
    },

    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "8989071137"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "404": { "description": "User not found" }
        }
      }
    },

    "/admin/login": {
      "post": {
        "tags": ["Admin"],
        "summary": "Admin login with phone",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "8989071137"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OTP sent successfully" },
          "404": { "description": "Admin not found" }
        }
      }
    },

    "/admin/create-Product": {
      "post": {
        "tags": ["Admin"],
        "summary": "Create new product",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "productName": {
                    "type": "string",
                    "example": "Men T-Shirt"
                  },
                  "description": {
                    "type": "string",
                    "example": "Premium cotton T-shirt"
                  },
                  "currency": {
                    "type": "string",
                    "enum": ["INR", "USD"],
                    "example": "INR"
                  },
                  "amount": {
                    "type": "number",
                    "example": 799
                  },
                  "category": {
                    "type": "string",
                    "enum": ["MENS", "WOMENS", "KIDS"],
                    "example": "MENS"
                  },
                  "sizes": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["M", "L"]
                  },
                  "colors": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["Black", "White"]
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Product created successfully" },
          "400": { "description": "Validation error" }
        }
      }
    },

    "/admin/product-update/{productId}": {
      "put": {
        "tags": ["Admin"],
        "summary": "Update product",
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "productName": { "type": "string" },
                  "description": { "type": "string" },
                  "currency": {
                    "type": "string",
                    "enum": ["INR", "USD"]
                  },
                  "amount": { "type": "number" },
                  "category": {
                    "type": "string",
                    "enum": ["MENS", "WOMENS", "KIDS"]
                  },
                  "sizes": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "colors": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Product updated successfully" },
          "404": { "description": "Product not found" }
        }
      }
    }

  }
}
