{
  "openapi": "3.0.0",
  "info": {
    "title": "E-Commerce API",
    "version": "1.0.0",
    "description": "API documentation for E-Commerce Backend"
  },
  "servers": [
      {
        "url": "http://localhost:5000/api/v1/auth"
      }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication APIs"
    }
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register user and send OTP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "xxxxxxxxxx"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OTP sent successfully"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/verify/{phone}": {
      "post": {
        "tags": ["Auth"],
        "summary": "Verify OTP",
        "parameters": [
          {
            "in": "path",
            "name": "phone",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "otp": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP verified successfully"
          },
          "400": {
            "description": "Invalid OTP"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "8989071137"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}
